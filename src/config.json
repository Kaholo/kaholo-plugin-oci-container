                    "autocompleteType":"function",
                    "functionName":"listClusters"
                },
                {
                    "name": "name",
                    "viewName": "Node Pool Name",
                    "type": "string"
                },
                {
                    "name": "kubernetesVersion",
                    "viewName": "Kubernetes Version",
